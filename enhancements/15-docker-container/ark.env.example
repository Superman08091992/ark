# ARK Docker Configuration Example
# Copy this file to ark.env and customize

# ============================================================================
# API Configuration
# ============================================================================
ARK_API_PORT=8000
ARK_API_HOST=0.0.0.0
ARK_DEBUG=false

# ============================================================================
# Redis Configuration
# ============================================================================
ARK_REDIS_HOST=127.0.0.1
ARK_REDIS_PORT=6379
# ARK_REDIS_PASSWORD=your_password_here

# ============================================================================
# Ollama Configuration
# ============================================================================
ARK_OLLAMA_HOST=http://127.0.0.1:11434
ARK_OLLAMA_MODEL=llama3.2:1b
ARK_OLLAMA_ENABLED=true

# ============================================================================
# Advanced Settings
# ============================================================================
ARK_WORKERS=4
ARK_TIMEOUT=30
ARK_MAX_REQUEST_SIZE=10
ARK_LOG_LEVEL=INFO

# ============================================================================
# Node.js Settings
# ============================================================================
NODE_ENV=production
