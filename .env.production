# ARK Production Environment Configuration

# ============================================================================
# System Configuration
# ============================================================================
ARK_ENV=production
ARK_BASE_PATH=/app
ARK_LOG_LEVEL=INFO
ARK_TIMEZONE=UTC

# ============================================================================
# Service Ports
# ============================================================================
ARK_HTTP_PORT=8000
ARK_REASONING_PORT=8101
ARK_FEDERATION_PORT=8104
ARK_FRONTEND_PORT=4173

# ============================================================================
# Database Configuration
# ============================================================================
ARK_DB_PATH=/app/data/ark.db
REASONING_DB_PATH=/app/data/reasoning_logs.db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# ============================================================================
# Federation Configuration
# ============================================================================
ARK_NODE_ID=ark-node-primary
ARK_TRUST_TIER=CORE
ARK_FEDERATION_ENABLED=true

# ============================================================================
# Memory Engine Configuration
# ============================================================================
ARK_MEMORY_CONSOLIDATION_INTERVAL=300
ARK_MEMORY_MAX_CHUNKS=1000
ARK_MEMORY_DEDUP_ENABLED=true

# ============================================================================
# Reflection System Configuration
# ============================================================================
ARK_REFLECTION_MODE=sleep
ARK_SLEEP_SCHEDULE=0 0 * * *
ARK_REFLECTION_MAX_CHUNKS=50
ARK_REFLECTION_MIN_CONFIDENCE=0.05

# ============================================================================
# ID Growth System Configuration
# ============================================================================
ARK_ID_BASE_ALPHA=0.3
ARK_ID_MIN_ALPHA=0.05
ARK_ID_MAX_ALPHA=0.8
ARK_ID_ENABLED=true

# ============================================================================
# Security Configuration
# ============================================================================
# Generate with: openssl rand -hex 32
ARK_SECRET_KEY=change-this-to-a-random-secret-key-in-production
ARK_API_KEY=change-this-api-key-for-external-access

# ============================================================================
# CORS Configuration
# ============================================================================
ARK_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ARK_CORS_CREDENTIALS=true

# ============================================================================
# Dashboard Configuration
# ============================================================================
ARK_DASHBOARD_ENABLED=true
ARK_DASHBOARD_UPDATE_INTERVAL=2.5

# ============================================================================
# Logging Configuration
# ============================================================================
ARK_LOG_FORMAT=json
ARK_LOG_FILE=/app/logs/ark.log
ARK_LOG_MAX_SIZE=10485760
ARK_LOG_BACKUP_COUNT=5

# ============================================================================
# Performance Configuration
# ============================================================================
ARK_WORKER_COUNT=2
ARK_MAX_CONNECTIONS=100
ARK_TIMEOUT=60

# ============================================================================
# Optional: External Services
# ============================================================================
# ARK_POSTGRES_URL=postgresql://user:pass@host:5432/arkdb
# ARK_PROMETHEUS_PORT=9090
# ARK_GRAFANA_PORT=3000
