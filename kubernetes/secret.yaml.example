---
# Secret for ARK Trading Intelligence API
# IMPORTANT: This is an example file. Create actual secret with real values.
# DO NOT commit actual secrets to git!

apiVersion: v1
kind: Secret
metadata:
  name: ark-api-secret
  namespace: ark-trading
  labels:
    app: ark-trading-api
type: Opaque
stringData:
  # Telegram bot credentials (from @BotFather)
  TELEGRAM_BOT_TOKEN: "YOUR_BOT_TOKEN_HERE"
  TELEGRAM_CHAT_ID: "YOUR_CHAT_ID_HERE"
  
  # Alpaca API keys (paper trading)
  ALPACA_API_KEY: "YOUR_ALPACA_KEY_HERE"
  ALPACA_API_SECRET: "YOUR_ALPACA_SECRET_HERE"
  
  # Optional: Other data provider keys
  POLYGON_API_KEY: ""
  ALPHA_VANTAGE_API_KEY: ""
  FINNHUB_API_KEY: ""
  
  # Database credentials (if using PostgreSQL)
  POSTGRES_USER: "arkuser"
  POSTGRES_PASSWORD: "YOUR_SECURE_PASSWORD_HERE"
  POSTGRES_DB: "ark_trading"

---
# How to create the secret from file:
# kubectl create secret generic ark-api-secret \
#   --from-literal=TELEGRAM_BOT_TOKEN="your_token" \
#   --from-literal=TELEGRAM_CHAT_ID="your_chat_id" \
#   --namespace=ark-trading

# Or from env file:
# kubectl create secret generic ark-api-secret \
#   --from-env-file=.env.production \
#   --namespace=ark-trading
