{
  "type": "module",
  "name": "ark-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "clean": "rimraf node_modules .turbo dist .astro .vercel .output",
    "build:all": "pnpm -r run build",
    "prepare": "pnpm install && pnpm build:all",
    "lint": "eslint . --ext .js,.ts,.astro",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "deploy": "astro build && npx wrangler pages deploy dist",
    "typecheck": "tsc --noEmit",
    "analyze": "astro build --analyze",
    "serve": "npx http-server dist",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o dist-storybook",
    "release": "standard-version"
  },
  "devDependencies": {
    "astro": "^5.15.3",
    "@astrojs/tailwind": "^5.0.2",
    "@astrojs/react": "^3.0.0",
    "@astrojs/node": "^8.2.0",
    "@astrojs/image": "^0.19.0",
    "typescript": "^5.6.3",
    "@types/node": "^20.14.11",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.0.0",
    "eslint-plugin-react": "^7.34.3",
    "vitest": "^2.1.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "rimraf": "^6.0.1",
    "cross-env": "^7.0.3",
    "standard-version": "^9.5.0",
    "gh-pages": "^6.1.1",
    "tailwindcss": "^3.4.13",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "turbo": "^2.1.0",
    "commitlint": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.1",
    "@storybook/react": "^8.0.0",
    "graphql": "^16.8.1",
    "dotenv": "^16.4.5",
    "wrangler": "^3.50.0"
  },
  "dependencies": {
    "fastify": "^5.6.1",
    "express": "^4.19.2",
    "pino": "^9.4.0",
    "axios": "^1.7.1",
    "zod": "^3.23.8",
    "sharp": "^0.34.4",
    "dotenv-flow": "^4.0.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.10",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "*.{js,ts,astro}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
